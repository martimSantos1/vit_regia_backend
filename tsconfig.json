{
    "compilerOptions": {
      "module": "ESNext", 
      "moduleResolution": "Node",
      "target": "ESNext", 
      "outDir": "./dist",
      "rootDir": "./src",
      "experimentalDecorators": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  